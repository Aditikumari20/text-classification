    "import re\n",
    "def clean_text(text):\n",
    "    text = re.sub(r'[a^zA-Z\\']', ' ',text)\n",
    "    text = re.sub(r'[^\\x00-\\x7F]+', ' ',text)\n",
    "    text = text.lower()\n",
    "    return text"
   ]
